<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dt_ticket_line_form_update_wizard" model="ir.ui.view">
        <field name="name">dt.ticket.line.wizard.form.update</field>
        <field name="model">dt.ticket.line.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="is_special_price" />
                    </group>
                    <group>
                        <field name="special_price" />
                    </group>
                </group>
                <footer>
                    <button class="btn-primary" name="action_update" type="object" string="Confirm" />
                    <button class="btn-secondary" special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>